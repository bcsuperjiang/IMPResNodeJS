    <title>Signin Template for Bootstrap</title>

    <!-- Bootstrap core CSS -->
    <!--<link href="../../../../dist/css/bootstrap.min.css" rel="stylesheet">-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
 
    <!-- Custom styles for this template -->
   
    <link href="/imp_css/job.css" rel="stylesheet">
    
     <link href="/imp_css/starter-template.css" rel="stylesheet">
  </head>

  <body>
     <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      
      <a class="navbar-brand" href="/impres">HOME</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse flex-row-reverse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/impres/info">Info</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/impres/job">New Job</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/impres/tutorial">Tutorial</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/impres/tool">Tools</a>
          </li>
        </ul>
      </div>
    </nav>

    <main role="main" class="container">
      <!--<div class="starter-template">-->
         <form method="POST" action="/impres/running" encType="multipart/form-data" id="needs-validation">
          <h2 class="text-center">Job Submission</h2>
      
          <h3 class="font-italic text-left">Organism</h3>
           <div class="form-group">
            <!--<label for="exampleFormControlSelect1">Example select</label>-->
              <select class="form-control col-sm-4" name="organism" id="exampleFormControlSelect1">
                <option>human</option>
                <option>yeast</option>
              </select>
          </div>
     
       <hr>
     
          <h3 class="font-italic text-left">Seed genes</h3>
          <div class="form-group row">
            <label for="seedfile" class="col-sm-2 col-form-label">Upload Seed gene file:</label>
            <div class="col-sm-5">
              <input type="file" class="form-control-file" name="seedfile" id="seedfile" required>
            </div>
          </div>
          <hr>
          
          
          <h3 class="font-italic text-left">Target genes</h3>
            <div class="form-group row">
                <div class="form-check col-sm-3 ">
                  <input class="form-check-input " type="radio" name="radiotarget" id="usertarget" value="option1" checked>
                  <label class="form-check-label" for="usertarget">Upload my own Target genes</label>
                </div>
                <div class="col-sm-5">
                  <input type="file" class="form-control-file" id="targetfile" name="targetfile" required>
                </div>
            </div>
            <div class="form-group row">
                <div class="form-check col-sm-3 ">
                  <input class="form-check-input" type="radio" name="radiotarget" id="autotarget" value="option2">
                  <label class="form-check-label" for="autotarget">Derive Target genes automatically</label>
                </div>
                <div class="col-sm-6 row">
                  <label class="col-sm-3"  for="targetnum">#Target genes: </label>
                  <input type="text" class="form-control-file col-sm-2" id="targetnum" name="targetnum" disabled required>
                </div>
            </div>
          <hr>
        

          <h3 class="font-italic text-left">Expression data</h3>
          <div class="form-group row">
            <label for="expfile" class="col-sm-3 col-form-label">Upload expression data file:</label>
            <div class="col-sm-5">
              <input type="file" class="form-control-file" id="expfile" name="expfile" required>
            </div>
          </div>
          <fieldset class="form-group">
            <div class="row">
             <legend class="col-form-label col-sm-2 pt-0">Data type</legend>
             <div class="col-sm-10">
               
               <div class="form-group">
                 <input class="form-check-input" type="radio" name="dataradio" id="radio_2case" value="2c_self_tfun1" checked>
                 <label class="form-check-label" for="radio_2case">Case-control</label>
               </div>
               <div class="form-group row">
                 <div class="col-sm-4 row">
                  <label class="col-sm-6"  for="casesam">#Case samples: </label>
                  <input type="text" class="form-control-file col-sm-4" id="controlsam" name="controlsam" required>
                 </div>
                 <div class="col-sm-4 row">
                  <label class="col-sm-7"  for="controlsam">#Control samples: </label>
                  <input type="text" class="form-control-file col-sm-4" id="casesam" name="casesam" required>
                 </div>
               </div>
               <div class="form-group">
                 <input class="form-check-input" type="radio" name="dataradio" id="radio_time" value="time_list_tfun2">
                 <label class="form-check-label" for="radio_time">Time-series</label>
               </div>
               <div class="form-group row">
                 <div class="col-sm-4 row">
                  <label class="col-sm-6"  for="timepoint">#Time points: </label>
                  <input type="text" class="form-control-file col-sm-4" id="timepoint" name="timepoint" disabled required>
                 </div>
                 <div class="col-sm-4 row">
                  <label class="col-sm-6"  for="replicate">#Replicates: </label>
                  <input type="text" class="form-control-file col-sm-4" id="replicate" name="replicate" disabled required>
                 </div>
               </div>
             </div>
            </div>
          </fieldset>
        <hr>
        
        
        <div class="form-group">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="ppiCheck" name="ppiCheck">
            <label class="form-check-label" for="ppiCheck">Integrate PPI into reference network</label>
        </div>
        </div>
          
          
          
          
          
          
          
        <div class="form-group">
          <button type="submit" class="btn btn-primary" id="btn_submit">Submit</button>
        </div>
        
         <div class="form-group">
          <p id="words" class="hidden text-danger">Your job is running, don't close the browser tab, waiting time could vary from minutes to hour.</p>
        </div>
      
        
      </form>
      <!--</div>-->
      
           
    </main>



   <script type="text/javascript" src="/imp_js/job.js"></script>
  </body>
</html>
